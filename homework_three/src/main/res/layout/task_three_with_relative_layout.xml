<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvSignIn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>
    <EditText
        android:id="@+id/etEmail1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="textEmailAddress"
        android:hint="@string/email"
        android:textSize="30sp"
        android:ems="10"
        android:textStyle="bold"
        android:padding="20dp"
        android:background="@drawable/shape"
        android:autofillHints="@string/email"
        android:layout_centerInParent="true"
        android:layout_below="@id/tvSignIn1" />
    <EditText
        android:id="@+id/etPassword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:hint="@string/password"
        android:textSize="30sp"
        android:ems="10"
        android:textStyle="bold"
        android:padding="20dp"
        android:background="@drawable/shape"
        android:autofillHints="@string/password"
        android:layout_centerInParent="true"
        android:layout_below="@id/etEmail1"/>
    <CheckBox
        android:id="@+id/checkboxRemember1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/remember"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/etPassword1"/>
    <TextView
        android:id="@+id/tvForgotPassword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/etPassword1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:paddingTop="20dp"
        android:paddingBottom="20sp"
        android:paddingStart="100dp"
        android:paddingEnd="100dp"
        android:textColor="@color/white"
        android:background="@drawable/button_shape"
        android:layout_centerInParent="true"
        android:layout_below="@id/checkboxRemember1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/just_sign_in"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>