<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape">

    <TextView
        android:id="@+id/tvCityNameWidget"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:lines="2"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvDateWidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCityNameWidget"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvTemperatureWidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@id/tvCityNameWidget"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvTemperatureWidget"
        android:layout_toEndOf="@id/tvTemperatureWidget"
        android:contentDescription="@string/icon_degrees"
        android:src="@drawable/degrees_white" />

    <ImageView
        android:id="@+id/ivCurrentWeatherWidget"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/tvTemperatureWidget"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/tvTemperatureWidget"
        android:contentDescription="@string/icon_weather" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivCurrentWeatherWidget"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/ivCurrentWeatherWidget" />
</RelativeLayout>